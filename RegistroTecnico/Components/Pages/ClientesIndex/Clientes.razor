@page "/ClientesIndex/Clientes"
@using RegistroTecnico.Models
@using RegistroTecnico.Services
@inject ClienteServices clienteService
@inject NavigationManager navigationManager

<PageTitle>Registro de Clientes</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header space-between">
            <h5 class="card-title">Registro de Clientes</h5>
            <a href="/ClientesIndex/CrearCliente" class="btn btn-primary">
                <span class="bi bi-plus-square mt-3"></span> Crear
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover">
                <thead class="table table-striped text-black">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>RNC</th>
                        <th>Fecha de Ingreso</th>
                        <th>ID Técnico Asignado</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ListaClientes.Any())
                    {
                        @foreach (var cliente in ListaClientes)
                        {
                            <tr>
                                <td>@cliente.ClienteID</td>
                                <td>@cliente.Nombres</td>
                                <td>@cliente.Direccion</td>
                                <td>@cliente.Rnc</td>
                                <td>@cliente.FechaIngreso.ToShortDateString()</td>
                                <td>@cliente.TecnicoID</td>
                                <td class="text-center">
                                    <!-- Botón Editar -->
                                    <a href="/ClientesIndex/EditarCliente/@cliente.ClienteID" class="btn btn-outline-primary bi bi-pencil-square">
                                    </a>

                                    <!-- Botón Eliminar -->
                                    <a href="/ClientesIndex/EliminarCliente/@cliente.ClienteID" class="btn btn-outline-danger bi bi-trash">
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No hay clientes registrados.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer">
            <label>Total Clientes: @ListaClientes.Count()</label>
        </div>
    </div>
</div>

@code {
    public List<RegistroTecnico.Models.Clientes> ListaClientes { get; set; } = new List<RegistroTecnico.Models.Clientes>();

    // Cargar la lista de clientes al inicializar
    protected override async Task OnInitializedAsync()
    {
        ListaClientes = await clienteService.Listar(c => true);
    }
}